{% extends 'BlogBundle:Frontend/Layout:base.html.twig' %}

{% set currentPath = app.request.attributes.get('_route') %}

{% block favicon %}
  {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
  {{ parent() }}

  <div class="wrap wrap--app {% block wrapclass %}{% endblock wrapclass %}">
    {% block header %}
      {{ parent() }}
      
      {% include 'BlogBundle:Frontend/Layout:header.html.twig' %}
    {% endblock header %}

    {% block content %}{% endblock %}
    <div id="push" class="hidden-xs"></div>
  </div>

  {% block footer %}
    {{ parent() }}
    {% block foot %}
      {% include('BlogBundle:Frontend/Layout:_footer.html.twig') %}
    {% endblock foot %}
  {% endblock footer %}

{% endblock %} {# endblock body #}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
