    {% for item in pagination %}
        {% set commentsCnt = commentsCount(item) %}
         {% if (loop.index0 % 4) == 0 %}
            <div class="col-xs-12" style="padding-top : 5px!important; padding: 0 0 0 0;">
        {% endif %}
        <div class="panel-warning col-xs-6 col-sm-6 col-md-3" >
            <a style="font-family:'Black Ops One';" href="{{ path('ed_frontend_blog_single_article', { 'slug': item.slug }) }}">

            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-aqua-active col-xs-12" style="padding: 0 0 0 0 !important;">
                {% media item.excerptPhoto, 'excerpt' with {'class': 'msports_item_index'} %}
            </div>
                
            <div class="widget-user-header col-xs-12">
                {{ item.title[:42] }}
            </div>
            <div class="widget-user-header col-xs-12">
                <p class="text--mini app-grey" style="font-family:'Black Ops One';">Publi√© le {{ item.publishedAt| date("m/d/Y")}}
                    
                </p>
            </div>
            </a>
        </div>
        {% if loop.index % 4  == 0 or loop.revindex == 1 %}
            </div>
        {% endif %}
    {% endfor %}
