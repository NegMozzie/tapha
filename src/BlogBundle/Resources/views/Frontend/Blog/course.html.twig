  
{% extends 'BlogBundle:Frontend/Blog:index.html.twig' %}
{% block sidebar %}
  {{ parent()}}
{% endblock sidebar %}
{% block main %}
    {% block carousel %}
    {% endblock carousel %}
    {% block container %}
      {% include "BlogBundle:Frontend/Blog:blogBreadcrumb.html.twig" %}
      <div id="col1" class="col c1 c-first">
      
        <article id="main-content">
          <div class="nwTable nwClub">
              <img alt="" class="nwLogo" src="{% path event.excerptPhoto, 'crop' %}">
              <h1><span>{{event}}</span></h1>
              <br class="clear">
                <div class="container col-md-12" style="margin-top: 15px;">
                  <ul class="nav nav-tabs col-md-12" >
                    <li class="active " style="width: 25% !important;padding: 0 0 0 0; margin: 0 0 0 0;"><a data-toggle="tab" href="#home"><h3>Commentaires</h3></a></li>
                    <li style="width: 25% !important;padding: 0 0 0 0; margin: 0 0 0 0;"><a data-toggle="tab" href="#menu1"><h3> C. Ecuries</h3></a></li>
                    <li style="width: 25% !important;padding: 0 0 0 0; margin: 0 0 0 0;"><a data-toggle="tab" href="#menu2"><h3> C. Pilotes</h3></a></li>
                  </ul>

                  <div class="tab-content col-md-12">
                    <div id="home" class="tab-pane fade in active ">
                      {% for comment in event.getComments %}
                        <div class="col-md-12">
                          <div class="col-md-2">
                            Tour:{{ comment.tour}}
                          </div>
                          <div class="col-md-10">
                            {{ comment.comment}}
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                    <div id="menu1" class="tab-pane fade">

                      <table class="table table-bordered" >
                        <thead>
                          <tr>
                            <th>Nom</th>
                            <th>Pilot1</th>
                            <th>Pilot2</th>
                            <th>Rang</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            {% for rank in event.getClassement() %}
                              {% set team = rank.getTeam() %}
                              {% if  team  %}
                                <td>{{ team }}</td>
                                {% set test = 0 %}
                                {% for pilot in  team.getPilots()  %}
                                  <td>{{ pilot }}</td>
                                  {% set test = loop.index0%}
                                {% endfor %}
                                {% if not test%}
                                  <td></td>
                                {% endif %}
                                <td>{{ rank.getRank() }}</td>
                              {% endif %}
                            {% endfor %}
                          </tr>
                        </tbody>
                      </table>
                    
                    </div>
                    <div id="menu2" class="tab-pane fade">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Temps</th>
                            <th>Rang</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            {% for rank in event.getClassement()%}
                              <td>John</td>
                              <td>Doe</td>
                              <td>john@example.com</td>
                            {% endfor %}
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
          </div>
        </article>
      </div>
      
    {% endblock container %}
    <div class="col-md-3" style="padding: 0 0 0 0; margin-top: 5px;" >
      
    </div>
{% endblock main %}

{% block foot %}
  
  <footer class="footer">
      <div class="container col-md-12" style="padding:0 0 0 0;">
        <div class="col-md-6 text--mini app-grey">Equipes de Formule 1 © {{ "now"|date("Y") }}</div>
    <div class="col-md-6  text--mini app-grey" style="float:right">Contacts: ©</div>
      </div>
    </footer>
{% endblock foot %}





  