{% if (categories|length) %}
    {% for children in categories %}
        <li class="dropdown" id="drop"><a href="{{ path('ed_frontend_blog_by_category', {'categorySlug': children.term.slug}) }}">{{children.term.title}} </a>
            <div class=" col-xs-12 container dropdown-menu exe_nav_sub">
                <div class="col-xs-2" style="margin: 0 0 0 0;">
                    <ul style="margin: 15% 15% 15% 1%; color:#479FA1 !important;">

                        {% set  br = 0 %}
                        {% for child in children.getChildren() %}
                            <li>
                                <a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_frontend_blog_by_category', {'categorySlug': child.term.slug}) }}">{{child.term.title|capitalize }}
                                </a>
                            </li>
                            <br>
                            {% set br = br + 1 %}
                        {% endfor %}
                        {% if "formule 1" in children.term.title|lower %}
                            <li><a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_blog_pilots', {'categorySlug': children.term.slug}) }}">Pilotes</a></li>
                            <li><a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_blog_teams', {'categorySlug': children.term.slug}) }}">Equipes</a></li>
                            <li><a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_blog_resultats', {'categorySlug': children.term.slug}) }}">Resultats</a></li>
                        {% endif %}

                         <li><a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_blog_classements', {'categorySlug': children.term.slug}) }}">Classement</a></li>
                         <li><a style="color:#479FA1 !important; height:auto !important;" href="{{ path('ed_blog_events', {'categorySlug': children.term.slug}) }}">Calendrier</a></li>
                    </ul>
                </div>
                <div class="col-xs-10" style="padding: 0 0 0 0;background-color:#479FA1;">
                    {{ render(controller('BlogBundle:Frontend/Blog:byCategorytag', {'categorySlug': children.term.slug})) }}
                </div>
            </div>
        </li>
    {%endfor%}
{%endif%}

