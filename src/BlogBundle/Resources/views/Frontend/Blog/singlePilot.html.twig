              <h1>
                <p>
                  {{pilot.getTeam|capitalize }}
                </p>
              </h1>
            </div>
          </div>

        </div>
    {% endblock container %}
    <div class="col-md-3" style="margin-top:5px;">
      <div class="semi-transparent-round" style="margin-top:5px;">
        {% render(controller('BlogBundle:Frontend/Sidebar:blogList')) %}
      </div>
    </div>
{% endblock main %}

