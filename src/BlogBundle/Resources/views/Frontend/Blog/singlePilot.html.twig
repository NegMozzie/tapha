{% extends 'BlogBundle:Frontend/Blog:index.html.twig' %}
{% block sidebar %}
  {{ parent()}}
{% endblock sidebar %}
{% block main %}
    {% block carousel %}
    {% endblock carousel %}
    {% block container %}
      {% include "BlogBundle:Frontend/Blog:blogBreadcrumb.html.twig" %}
      <div class="col-md-9" style="margin-top:5px;">
          <div class="col-md-12" style="width:100%; height: 400px; padding: 0 0 0 0;  margin : 0 0 0 0;">
            <img class="img-div" src="{% path pilot.countryPhoto, 'excerpt' %}" alt="">
