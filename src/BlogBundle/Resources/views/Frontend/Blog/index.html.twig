{% extends 'BlogBundle:Frontend/Layout:main.html.twig' %}

{% block content %}
	<div class=" margin--t container-fluid" style="margin-top:130px!important;">
		<div class="row">
		
			<div class="col-xs-12 col-sm-8" style="padding: 0 0 0 0 !important;">
				{% block main %}
                    {% block carousel %}
						<div class="carousel slide" data-ride="carousel">
        	                {{ render(controller('BlogBundle:Frontend/Carousel:index')) }}
		                </div>
                    {% endblock carousel %}
                    {% block container %}
						{% include "BlogBundle:Frontend/Blog:indexAjax.html.twig" %}
                    {% endblock container %}
				{% endblock main %}
			</div>
		{% block sidebar %}
			<div class="col-xs-12 col-sm-4">
	            <div>
                	{% render(controller('BlogBundle:Frontend/Sidebar:blogList')) %}
	            </div>
			</div>
		{% endblock sidebar %}
		</div>
	</div>
{% endblock content %}

{% block foot %}
	
	<footer class="footer">
      <div class="container col-xs-12">
        {{ render(controller('BlogBundle:Frontend/Navbar:footer')) }}
      	
		<div class="col-xs-6  text--mini app-grey" style="float:right">
        	<a class="black" href="{{ path('ed_frontend_contact') }}">
			Nous contacter
			</a>
		</div>
      </div>
    </footer style="margin-bottom: 50px;">
{% endblock foot %}