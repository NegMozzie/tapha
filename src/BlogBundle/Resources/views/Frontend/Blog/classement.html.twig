{% extends 'BlogBundle:Frontend/Blog:index.html.twig' %}
{% block sidebar %}
	{{ parent()}}
{% endblock sidebar %}
{% block main %}
    {% block carousel %}
    {% endblock carousel %}
    {% block container %}
		<div class="col-md-12" style="padding-top : 5px;">
			<div >
				<article id="main-content" style="position: relative;">
					<!--ZONES-->
					<div class="nwTable">
						<h1>Classement Pilotes 
						 	{% for item in pagination %}
						 		{{ item }}
						 	{% endfor %}
						 </h1>
						{% if  pagination|length < 1 %}
							<h1>Cette Cat√©gorie n'a pa d'evenement</h1>
						{% elseif  pagination|length >  1%}
					 		{% for item in pagination %}
					 			{% media item.excerptPhoto, 'small' with { 'class':'nwLogo' } %}
					 		{% endfor %}
						{% else %}
					 		{% set item = pagination[0] %}
					 		{% media item.excerptPhoto, 'small' with { 'class':'nwLogo' } %}	
						 	<table cellspacing="0" cellpadding="1" border="0" width="100%" class="nwGrandPrix">
						 		<colgroup>			
						 			<col width="1%">	
						 			<col width="54%">	
						 			<col width="5%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
						 			<col width="2%">
				 				</colgroup>
								<thead>		
									<tr>
										<td colspan="3" class="br"></td>
						 				{% for gp in item.getChildren %}
											<td class="tc bt altv">
												<a href="">
													<div class="rotated-text"><span class="rotated-text__inner"> {{gp.name}}</span></div>

												</a>
											</td>
										{% endfor %} 
									</tr>		
									<tr class="bl br">
										<th colspan="2">Grand Prix</th>
										<th class="tc">Tot.</th>
						 				{% for gp in item.getChildren %}
											<th class="tc">
												<img alt="" class="" src="{% path gp.excerptPhoto, 'small' %}">
							
											</th>
										{% endfor %} 			
									</tr>
								</thead>
								<tbody>
						 			{% for team in item.getPilots %}
										<tr class="alt">
											<td class="tr bl"><b>{{team.rank}}</b></td>
											<td nowrap="">
												<strong><a href="/f1/pilotes/nico-rosberg.html">{{ team.getPilot }}</a></strong>
											</td>
											<td class="tc classAuto"><b>25</b></td>
											<td class="tc">25</td>
										</tr>
									{% endfor %} 			
								</tbody>	
							</table>
					 	{% endif %}
					</div>
				</article><!-- main-content -->
			</div>
			{{ knp_pagination_render(pagination) }}
		</div>
    {% endblock container %}
{% endblock main %}
