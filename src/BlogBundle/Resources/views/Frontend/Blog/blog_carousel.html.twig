<!-- Indicators -->
<ol class="carousel-indicators">
  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
  <li data-target="#myCarousel" data-slide-to="1"></li>
  <li data-target="#myCarousel" data-slide-to="2"></li>
</ol>
<div class="img-div carousel-inner" role="listbox">
{% for post in posts %}
    <a class="black" href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug }) }}">

    {% if loop.index  == 1 %}
      <div class="item img-div  active" >
        <a href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug })}} ">
          {% media post.excerptphoto, 'excerpt' with {'class': 'col-md-8 mz_image img-rounded'} %}
          <div class="mz_text col-md-4">
              <div class="text--30 text--bold black margin--halfb lh32"><a class="black" href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug }) }}">{{ post.title }}</a></div>

                  <p class="text--mini app-grey">By <a href="{{ path('ed_frontend_blog_by_author', {'username': post.author.username}) }}">{{ post.author.blogDisplayName }}</a> on {{ post.publishedAt|blogDate}}
                      {% if (post.categories|length) %}
                          in {%  for category in post.categories %}
                          {{ loop.index0 ? ', ' }}<a href="{{ path('ed_frontend_blog_by_category', {'categorySlug': category.term.slug}) }}" >{{ category.term.title }}</a>
                              {% endfor %}
                      {% endif %}
                      {% if ( is_granted('ACCESS_COMMENTS') and commentsCnt) %}
                          | <a class="black" href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug }) }}#comments">{{  commentsCnt }} comment{{  (commentsCnt > 1) ? 's' }}</a>
                      {% endif  %}
                  </p>


              <div class="title-carousel">{{ post.excerptText|raw }}</div>

              <a class="app-blue text--bold text--upper" href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug }) }}">Read more</a>
          </div>
        </a>
      </div>
    {% endif %}
    {% if loop.index  == 2 %}
      <div class="item img-div " >
        <a href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug })}} ">
          <img class="col-md-8 mz_image img-rounded" src="{% path post.excerptPhoto, 'big' %}" alt="Chania">
          <div class="mz_text col-md-4">
              <h1> {{post.title }}</h1>
              <p> {{post.excerptText|raw   }}</p>
          </div>
        </a>
      </div>
    {% endif %}
    {% if loop.index  == 3 %}
      <div class="item img-div " >
        <a href="{{ path('ed_frontend_blog_single_article', { 'slug': post.slug })}} ">
          <img class="col-md-8 mz_image img-rounded" src="{% path post.excerptPhoto, 'big' %}" alt="Chania">
          <div class="mz_text col-md-4">
              <h1> {{post.title }}</h1>
              <p> {{post.excerptText|raw  }}</p>
          </div>
        </a>
      </div>
    {% endif %}
    </a>
{% endfor %}
</div>

<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
</a>


