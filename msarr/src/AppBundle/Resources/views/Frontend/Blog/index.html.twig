{% extends '::base.html.twig' %}
{% block content %}
{% for item in pagination %}
    <div class="col-md-4">
    <a class="black" href="{{ path('ed_frontend_blog_single_article', { 'slug': item.slug }) }}">
    	<div class="col-md-6">
            <div class="mz-article-img">
            	<img class="mz-article-img" src="{% path item.excerptPhoto, 'big' %}">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mz-article-text">
                <div class="text--30 text--bold black margin--halfb lh32">
                    <a class="black" href="{{ path('ed_frontend_blog_single_article', { 'slug': item.slug }) }}" "font-size:x-small;">
                        {{ item.title }}
                    </a>
                </div>
                <p class="margin--t" style ="font-size:xx-small;">
                    {{ item.getText() | raw }}
                </p>
                <p class="margin--t" style ="font-size:xx-small;">{{ item.createdAt | format_datetime}}</p>                            
            </div>
        </div>
    </a>
    </div>
{% endfor %}
{% endblock content %}